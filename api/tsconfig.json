{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "node",
		"outDir": "dist",
		"rootDir": "src",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": false,
		"noImplicitAny": false,
		"checkJs": false,
		"skipLibCheck": true,
		"allowJs": true,
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"],
}
